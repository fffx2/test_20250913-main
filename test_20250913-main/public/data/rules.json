{
  "wcag": {
    "version": "2.1",
    "principles": {
      "perceivable": {
        "guidelines": {
          "1.1": {
            "title": "텍스트 대안",
            "description": "모든 비텍스트 콘텐츠에 대체 텍스트 제공"
          },
          "1.3": {
            "title": "적응 가능",
            "description": "정보나 구조의 손실 없이 다양한 방법으로 표현될 수 있는 콘텐츠 생성"
          },
          "1.4": {
            "title": "구별 가능",
            "description": "사용자가 콘텐츠를 보고 들을 수 있도록 지원"
          }
        }
      },
      "operable": {
        "guidelines": {
          "2.1": {
            "title": "키보드 접근 가능",
            "description": "모든 기능을 키보드로 사용할 수 있도록 함"
          },
          "2.4": {
            "title": "탐색 가능",
            "description": "사용자가 탐색하고 콘텐츠를 찾을 수 있도록 지원"
          }
        }
      }
    }
  },
  "color_contrast": {
    "normal_text": {
      "aa": 4.5,
      "aaa": 7.0
    },
    "large_text": {
      "aa": 3.0,
      "aaa": 4.5,
      "size_threshold": "18pt"
    }
  },
  "font_requirements": {
    "min_font_size": {
      "mobile": "16px",
      "desktop": "14px"
    },
    "line_height": {
      "minimum": 1.5,
      "recommended": 1.6
    },
    "letter_spacing": {
      "minimum": "0.12em",
      "recommended": "0.15em"
    }
  },
  "semantic_html": {
    "required_attributes": {
      "img": ["alt"],
      "input": ["type", "id"],
      "label": ["for"],
      "form": ["action", "method"],
      "button": ["type"],
      "a": ["href"]
    },
    "heading_structure": {
      "rules": [
        "h1은 페이지당 하나만 사용",
        "heading 순서는 건너뛰지 않음 (h1 → h2 → h3)",
        "제목은 내용을 정확히 설명해야 함"
      ]
    },
    "landmark_roles": [
      "main",
      "navigation",
      "header",
      "footer",
      "section",
      "article",
      "aside"
    ]
  },
  "iri_color_system": {
    "description": "IRI 색채 시스템 기반 웹 접근성 색상 가이드라인",
    "color_categories": {
      "primary": {
        "purpose": "브랜드 색상, CTA 버튼",
        "contrast_requirement": "AA 준수",
        "usage_limit": "전체 화면의 30% 이하"
      },
      "secondary": {
        "purpose": "보조 색상, 강조 요소",
        "contrast_requirement": "AA 준수",
        "harmony_rule": "primary 색상과 조화"
      },
      "neutral": {
        "purpose": "텍스트, 배경, 경계선",
        "contrast_requirement": "AAA 권장",
        "range": "#000000 ~ #FFFFFF"
      }
    },
    "accessibility_palette": {
      "safe_combinations": [
        {"background": "#FFFFFF", "text": "#000000", "ratio": 21},
        {"background": "#F8F9FA", "text": "#212529", "ratio": 16.75},
        {"background": "#0D6EFD", "text": "#FFFFFF", "ratio": 5.89},
        {"background": "#198754", "text": "#FFFFFF", "ratio": 4.56}
      ]
    }
  },
  "analysis_criteria": {
    "critical_issues": [
      "color_contrast_failure",
      "missing_alt_text",
      "keyboard_inaccessible",
      "invalid_heading_structure"
    ],
    "warning_issues": [
      "small_font_size",
      "missing_labels",
      "insufficient_line_height",
      "no_focus_indicators"
    ],
    "optimization_suggestions": [
      "improve_semantic_markup",
      "add_aria_labels",
      "optimize_color_palette",
      "enhance_navigation"
    ]
  }
}